
@{
    ViewData["Title"] = "EditSupplier";
}

<h1 style="color:white; background-color:darkgray;border-radius:10px;text-align:center;margin-bottom:10px;padding:10px;">Edit Supplier</h1>
@model Supplier
<form asp-action="EditSupplierSave" asp-controller="Suppliers" method="post">
    <div class="form-group">
        <input asp-for="SupplierId" hidden class="form-control" placeholder="" />
        <span asp-validation-for="SupplierId" style="color:red;"></span>
    </div>
    <div class="form-group">

        <label asp-for="SupplierName" class="form-label">Supplier Name</label>
        <input asp-for="SupplierName" value="@Model.SupplierName" class="form-control" placeholder="Supplier Name" />
        <span asp-validation-for="SupplierName" style="color:red;"></span>
    </div>
    <input type="submit" value="Submit" class="btn btn-outline-success form-control" style="margin-top:20px;" />

</form>